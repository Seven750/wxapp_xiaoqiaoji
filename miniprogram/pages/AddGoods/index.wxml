<view class='page'>
  <view class='page_body' disabled="true">
    <wux-cell-group>
            <wux-cell>
                <wux-input label="货物名称" bind:change='GetGoodName'/>
            </wux-cell>
            <view class="weui-cells weui-cells_after-title">
              <view class="weui-cell weui-cell_select">
                <view class="weui-cell__hd weui-cell__hd_in-select-after">
                    <view class="weui-label">货物单位</view>
                </view>
                <view class="weui-cell__bd">
                    <picker bindchange="pickerChange" data-model="typeIndex" value="{{ typeIndex }}" range="{{ types }}">
                        <view class="weui-select weui-select_in-select-after">{{ types[typeIndex] }}</view>
                    </picker>
                </view>
              </view>
            </view>
            <wux-cell>
                <wux-input label="货物单价" type='digit' bind:change="GetGoodPrice">
                 <view slot="footer" >￥/{{ types[typeIndex] }}</view>
                </wux-input>
            </wux-cell>
            <wux-cell>
                <wux-textarea label="货物描述" placeholder="最多输入一百个字" maxlength="100" autoHeight="true" bind:change="GetGoodsDescription"/>
            </wux-cell>
            <wux-cell>
                <wux-input label="目前货物库存" type='number' bind:change="GetGoodReserve">
                 <view slot="footer" >{{ types[typeIndex] }}</view>
                </wux-input>
            </wux-cell>
            <wux-cell>
              <view class="weui-uploader">
                <view class="weui-uploader__hd">
                    <view class="weui-uploader__title">图片上传</view>
                    <view class="weui-uploader__info">{{localfiles.length}}/4</view>
                </view>
                <view class="weui-uploader__bd">
                  <block wx:for="{{localfiles}}" wx:key="*this">
                      <view class="weui-uploader__file" bindtap="Open" id="{{item}}">
                          <image class="weui-uploader__img" src="{{item}}" mode="aspectFit" />
                          
                      </view>
                  </block>
                  <view wx:if="{{files.length<4}}" class="weui-uploader__files">
                    <view class="weui-uploader__input-box">
                        <view class="weui-uploader__input" bindtap="chooseImage"></view>
                    </view>
                  </view>
                </view>
              </view>
            </wux-cell>
      </wux-cell-group>
  </view>
  <view style='margin-top:50rpx'>
      <i-button bind:click="onAdd" type="info" shape="circle" size="small" >保存</i-button>
      <i-button bind:click="SaveGood" type="ghost" shape="circle" size="small">返回</i-button>
  </view>
</view>

